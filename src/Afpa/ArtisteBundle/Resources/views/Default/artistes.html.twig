{% extends '::base.html.twig' %}

{% block title %} {{ parent() }}{% endblock %}

{% block body %}
<div class="row header">
			<div class="col-md-4"></div>
				<h1 class="h1" >{{artiste.artists.items.0.name}}</h1>
			</div>
			<div class="row-profile">
			<div class="col-md-1">
			</div>
				<div class="profile-box col-md-3">
					<img class="img-circle" src="{{artiste.artists.items.0.images.2.url}}"></img> </br></br>
						<h3>Genre :</h3>
						<p><ul>
						{% if artiste.artists.items.0.genres is empty %}
							<li> -</li>
						{% else %}
							{% for genre in artiste.artists.items.0.genres %}
								<li> {{ genre }}</li>
							{% endfor %}
						{% endif %}
					</ul></p></br>
					
				</div>
			</div>
			<!--Donuts -->
            <div class="row section ui-elements">
                <div class="col-md-3 knobs">
                    <div class="knob-wrapper">
						<a class="btn-flat gray" href="{{artiste.artists.items.0.external_urls.spotify}}">Voir sur spotify</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</br></br>
						<a class="btn-flat default" href="{{ path('afpa_artiste_sauvegarde', { 'artist': artiste.artists.items.0.name }) }}">Sauvegarder cet artiste</a></br></br>
						<h3>Popularité :</h3></br>
                        <input type="text" value="{{ artiste.artists.items.0.popularity|popuplus }}" class="knob" data-thickness=".3" data-inputColor="#333" data-fgColor="#5ba0a3" data-bgColor="#cef3f5" data-width="150" data-readOnly="true">
                        <div class="info">
                            <div class="param">
                                <span class="line blue"></span>
                                Popularité
                            </div>
                        </div>
                    </div>                       
                </div>
				<div class="profile-box col-md-4">
				<h3>Albums</h3>
				<hr>
				{% for alb in album.albums.items %}
					<p>{{alb.name}}
					<img class="img-circle" src="{{alb.images.2.url}}"></img> </br></br>
					<a class="btn-flat gray" href="{{alb.external_urls.spotify}}">Voir sur spotify</a>
					<hr>
					</p>
				{% endfor %}
				</div>
			</div>
           </div>
			
			
{% endblock %}